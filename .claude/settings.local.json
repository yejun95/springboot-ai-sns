{
  "permissions": {
    "allow": [
      "Bash(./gradlew build:*)",
      "Bash(./gradlew bootRun)",
      "Bash(curl:*)",
      "Bash(netstat:*)",
      "Bash(./gradlew bootRun:*)",
      "Bash(./gradlew.bat bootRun:*)",
      "Bash(./gradlew:*)",
      "Bash(./gradlew.bat clean:*)",
      "Bash(docker run:*)",
      "Bash(docker rm:*)",
      "Bash(docker exec:*)",
      "Bash(docker-compose up:*)",
      "Bash(docker-compose ps:*)",
      "Bash(docker-compose logs:*)",
      "Skill(spring-api-rules)",
      "Skill(codereview)",
      "Bash(bash auth.sh:*)",
      "Bash(bash:*)",
      "Bash(taskkill:*)",
      "Bash(cmd //c \"taskkill //F //PID 11028\")",
      "Bash(kill:*)",
      "Bash(taskkill.exe:*)",
      "Bash(powershell.exe -Command \"Stop-Process -Id 11028 -Force\")",
      "Bash(powershell.exe -Command \"Get-Process | Where-Object {$_Path -like ''*java*'' -and $_CommandLine -like ''*bootRun*''} | Select-Object -ExpandProperty Id\")",
      "Bash(powershell.exe -Command \"Stop-Process -Id 20216 -Force\")"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/lint.sh",
            "timeout": 60
          }
        ]
      }
    ]
  }
}
